@using Entidades
@model E_rfc

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #0d3027;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">
                <img src="https://upload.wikimedia.org/wikipedia/commons/f/f8/Logo_del_Gobierno_de_M%C3%A9xico_%282018%29.png" alt="" width="170" height="50" class="d-inline-block align-text-top">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="/Home/Iniciar">Crear RFC</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/irBD">Mostrar registros</a>
                    </li>
                    <li class="nav-item">
                        <form class="d-flex" role="search" action="/Home/Buscar" method="post">
                            <input class="form-control me-2" name="textoBusqueda" type="search" placeholder="Ingresa-letras-números" aria-label="Buscar">
                            <button class="btn btn-success" type="submit">Buscar</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1 class="display-1 text-center">Corrige tu información</h1>
        <br />

        <form action="/Home/Actualizar" method="post">

            <input type="hidden" name="idUsuario" value="@Model.idUsuario" />

            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Nombre(s)</span>
                <input type="text" value="@Model.nombre" name="nombre" class="form-control" placeholder="Escribe tu(s) nombre(s)" aria-label="Escribe tu(s) nombre(s)" aria-describedby="basic-addon1" required>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Apellido paterno</span>
                <input type="text" value="@Model.apellidoPa" class="form-control" name="apellidoPa" placeholder="Escribe tu primer apellido" aria-label="Escribe tu primer apellido" aria-describedby="basic-addon1" required>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Apellido materno</span>
                <input type="text" class="form-control" value="@Model.apellidoMa" name="apellidoMa" placeholder="Escribe tu segundo apellido" aria-label="Escribe tu segundo apellido" aria-describedby="basic-addon1" required>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Fecha de nacimiento</span>
                <input type="date" name="fechaNac" value="@Model.fechaNac.ToString("yyyy-MM-dd")" class="form-control" placeholder="Día/Mes/Año" aria-label="Día/Mes/Año" aria-describedby="basic-addon1" required>
            </div>
            <div class="text-center">
                <a href="/Home/irAtras" style="background-color: #0d3027;" class="btn btn-dark">Atrás</a>
                <input class="btn btn-success" type="submit" name="Actualizar" value="Edita tu información" />
            </div>
        </form>

    </div>
</body>
</html>
